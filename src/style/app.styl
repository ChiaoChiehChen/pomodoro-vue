*,
*::before,
*::after
  box-sizing border-box
  list-style: none
#app
  // background: red
  input
    width 600px
    height 60px
    border-top-right-radius 0px
    border-bottom-right-radius 0px
  .plus_btn
    width: 60px
    height 60px
    border 1px solid #f44438
    border-top-left-radius 0px
    border-bottom-left-radius 0px
    background-color #f44438
#home
  .hamburger
    position: relative
  .hamburgerBtn
    border 1px solid transparent
    background-color transparent
    color #f44438
    position absolute
    left 105%
    top: -120px
  .content
    position relative
    .square
      width 250px
      height 250px
      border 1px solid #f44438
      border-radius 2.5rem
      background #f44438
      box-shadow: 0 0 61px -15px #d60000
      position relative
    .start
      width 110px
      height 50px
      color #f44438
      line-height: 50px
      background-color: white
      border-radius 40px 0
      position absolute
      top 199px
      left: 139px
      font-size: 28px
      font-weight 600
    .timetxt
      width 100%
      position: absolute
      top -150px
  .items
    position absolute
    left -25%
    top 100%
  & li
    color rgb(126, 126, 126)
    font-size: 18px
    font-weight bold
    line-height: 1.5
  & li::before
    content '‚óè'
    font-size: 20px
    color #f44438
    font-weight: 400
    margin-right: 5px
  .txt 
    position absolute
    left: -20%
    top: 160%
  .txt2
  & h2
      font-size: 26px
      font-weight bold
      text-decoration none
      padding 3px
      color rgb(173,173,173)
  & h2:nth-child(1)
      border-bottom 5px solid rgb(89,89,89)
      margin-right 50px
  & h2:nth-child(2)
      margin-left 50px
  .bottom
    width 100%
    height 25px
    background #f44438
#list
  margin-top -108px
  height 100vh
  background-color #444
  .colorWhite
    color white
    border none
  .back
    position relative
  .backBtn
    border 1px solid transparent
    background-color transparent
    color #f44438
    position absolute
    left: 105%
    top: 40px
  .listitem
    height 100vh
  .tablelist 
    color white
  & thead th
      border-top none
      border-bottom none
  & td
    border none
  .line
    width 3px
    height  60vh
    margin-top: 150px
    background: #707070
  .dotbtn
    background transparent
    border none
  & p
    color white
  

